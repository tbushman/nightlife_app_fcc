navbar.navbar-default.navbar-fixed-top
	div.container-fluid
		div.navbar-header
			button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target="#navbar-collapse-1", aria-expanded="false")
				span.sr-only Toggle navigation
				span.icon-bar
				span.icon-bar
				span.icon-bar
			a.navbar-brand(href="#") yelp.bli.sh
				h6.subtitle #{appTitle}
		div.collapse.navbar-collapse#navbar-collapse-1
			
						
			if (user)		
				ul.nav.navbar-nav.navbar-left
					li(class=(menu === 'index')?'active':'')
						a(href='/') 
							h4 Home
					li(class=(menu === 'search')?'active':'')
						a(href="/search") 
							h4 Search
					li(class=(menu === 'user')?'active':'')
						a(href="/user") 
							h4 Profile
				ul.nav.navbar-nav.navbar-right
					li
						a(href="/logout") 
							h4 Log out
			else
				ul.nav.navbar-nav.navbar-left
					li(class=(menu === 'index')?'active':'')
						a(href='/') 
							h4 Home
					li(class=(menu === 'search')?'active':'')
						a(href="/search") 
							h4 Search
				ul.nav.navbar-nav.navbar-right
					li(class=(menu === 'login')?'active':'')
						a(href='/login') 
							h4 Log in
					li(class=(menu === 'register')?'active':'')
						a(href='/register') 
							h4 Sign up